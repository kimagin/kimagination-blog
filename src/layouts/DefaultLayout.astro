---
import { AppConfig } from '../AppConfig'
import Footer from '../components/structure/Footer.astro'
import Head from '../components/structure/Head.astro'
import Header from '../components/structure/Header.astro'

interface Props {
  title?: string
}

const { title } = Astro.props
---

<html
  lang="en"
  x-data="{ dark : $persist(false) }"
  :data-theme="dark ? 'black' : 'light'">
  <Head {title} />
  <body class="flex flex-col min-h-screen">
    <!-- Header -->
    <Header links={AppConfig.links} />
    <main
      class="max-w-full lg:px-24 px-4 py-16 items-center justify-center flex flex-1 min-h-full">
      <!-- 		Main Content	 -->
      <slot />
    </main>
    <!-- Footer -->
    <Footer />
  </body>
</html>
